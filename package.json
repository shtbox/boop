{
  "name": "@shtbox/boop",
  "version": "0.7.0-0",
  "description": "Simple Interactions - Embeddable feedback widget for React websites.",
  "keywords": [
    "react",
    "feedback",
    "widget",
    "shtbox",
    "boop"
  ],
  "license": "MIT",
  "author": "Shtbox.io",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "commit": "cz",
    "bump:patch": "npm version patch --tag-version-prefix v -m \"chore(release): v%s\"",
    "bump:minor": "npm version minor --tag-version-prefix v -m \"chore(release): v%s\"",
    "bump:major": "npm version major --tag-version-prefix v -m \"chore(release): v%s\"",
    "bump:pre:patch": "npm version prepatch --tag-version-prefix v -m \"chore(release): v%s\"",
    "bump:pre:minor": "npm version preminor --tag-version-prefix v -m \"chore(release): v%s\"",
    "bump:pre:major": "npm version premajor --tag-version-prefix v -m \"chore(release): v%s\"",
    "bump:pre:release": "npm version prerelease --tag-version-prefix v -m \"chore(release): v%s\"",
    "deploy": "npm run build && npm publish --access public",
    "prepack": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.13",
    "@vitest/coverage-v8": "^4.0.18",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "react": "^18.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "directories": {
    "example": "example"
  },
  "commitizen": {
    "path": "cz-conventional-changelog"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shtbox/boop.git"
  },
  "bugs": {
    "url": "https://github.com/shtbox/boop/issues"
  },
  "homepage": "https://github.com/shtbox/boop#readme"
}
